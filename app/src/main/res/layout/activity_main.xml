<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="60dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/solucion"
            android:background="#1000"
            android:text="0"
            android:textSize="32sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="18dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <Button
            android:id="@+id/num_7"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="7"
            android:textSize="32sp"
            android:background="#03DAC5"/>
        <Button
            android:id="@+id/num_8"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="8"
            android:textSize="32sp"
            android:background="#03DAC5"/>
        <Button
            android:id="@+id/num_9"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="9"
            android:textSize="32sp"
            android:background="#03DAC5"/>
        <Button
            android:id="@+id/bt_mult"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="x"
            android:textSize="32sp"
            android:background="#0091EA"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="18dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <Button
            android:id="@+id/num_4"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="4"
            android:textSize="32sp"
            android:background="#03DAC5"/>
        <Button
            android:id="@+id/num_5"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="5"
            android:textSize="32sp"
            android:background="#03DAC5"/>
        <Button
            android:id="@+id/num_6"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="6"
            android:textSize="32sp"
            android:background="#03DAC5"           />
        <Button
            android:id="@+id/bt_div"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="/"
            android:textSize="32sp"
            android:background="#0091EA"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="18dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <Button
            android:id="@+id/num_1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="1"
            android:textSize="32sp"
            android:background="#03DAC5"/>
        <Button
            android:id="@+id/num_2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="2"
            android:textSize="32sp"
            android:background="#03DAC5"/>
        <Button
            android:id="@+id/num_3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="3"
            android:textSize="32sp"
            android:background="#03DAC5"/>
        <Button
            android:id="@+id/bt_sum"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="+"
            android:textSize="32sp"
            android:background="#0091EA"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="18dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

    <Button
        android:id="@+id/bt_lim"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="CE"
        android:textSize="28sp"
        android:background="#0091EA"/>
    <Button
        android:id="@+id/num_0"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="0"
        android:textSize="32sp"
        android:background="#03DAC5"/>
    <Button
        android:id="@+id/bt_igual"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="="
        android:textSize="32sp"
        android:background="#0091EA"/>
    <Button
        android:id="@+id/bt_rest"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="32sp"
        android:layout_marginRight="20dp"
        android:background="#0091EA" />
    </LinearLayout>

</LinearLayout>